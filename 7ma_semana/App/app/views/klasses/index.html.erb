<p id="notice"><%= notice %></p>

<h1>Klasses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Credit</th>
      <th>Student</th>
      <th>Tutor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @klasses.each do |klass| %>
      <tr>
        <td><%= klass.name %></td>
        <td><%= klass.credit %></td>
        <td><%= Student.select(:name).where("id = " + klass.student_id.to_s).collect(&:name)[0] %></td>
        <!-- <td><%= klass.tutor_id %></td> -->
        <td><%= Tutor.select(:name).where("id = " + klass.tutor_id.to_s).collect(&:name)[0] %></td>
        <td><%= link_to 'Show', klass %></td>
        <td><%= link_to 'Edit', edit_klass_path(klass) %></td>
        <td><%= link_to 'Destroy', klass, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

